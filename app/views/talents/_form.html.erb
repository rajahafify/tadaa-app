<div class="container">
  <%= form_for(@talent, html: { class: "form"}) do |f| %>
    <div class="row">
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control"  %>
      </div>
    </div>

    <div class="row">
      <div class="mb-3">
        <%= f.label :subtitle, class: "form-label" %>
        <%= f.text_field :subtitle, class: "form-control"  %>
      </div>
    </div>

    <div class="row">
      <div class="mb-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="mb-3">
        <%= f.label :images, class: "form-label" %>
        <%= f.file_field :images, multiple: true, direct_upload: true, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="mb-3">
        <%= f.label :instagram_handle, class: "form-label" %>
        <%= f.text_field :instagram_handle, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="mb-3">
        <%= f.label :instagram_url, class: "form-label" %>
        <%= f.text_field :instagram_url, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="mb-3">
        <%= f.label :twitter_handle, class: "form-label" %>
        <%= f.text_field :twitter_handle, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="mb-3">
        <%= f.label :twitter_url, class: "form-label" %>
        <%= f.text_field :twitter_url, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="mb-3">
        <%= f.submit "Create Talent" , class: "btn btn-block btn-success btn-tada btn-block" %>
      </div>
    </div>
  <% end %>
</div>
